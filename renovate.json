{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeStrategy": "rebase"
    },
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies"
    },
    {
      "matchPackagePatterns": ["@angular/.+"],
      "dependencyDashboardApproval": true
    }
  ],
  "automergeType": "branch",
  "commitBody": "by https://www.whitesourcesoftware.com/free-developer-tools",
  "commitBodyTable": true,
  "commitMessageSuffix": "[whitesourcesoftware.com]",
  "semanticCommits": true,
  "dependencyDashboardAutoclose": true,
  "dependencyDashboardTitle": "Dependency Dashboard (by whitesourcesoftware.com)",
  "labels": ["dependencies"],
  "prBodyColumns": [
    "Package",
    "Update",
    "Type",
    "New value",
    "Package file",
    "References"
  ],
  "prCreation": "not-pending",
  "semanticCommitType": "build",
  "semanticCommitScope": "{{baseDir}}",
  "separateMultipleMajor": true,
  "updateInternalDeps": true,
  "ignoreDeps": ["@semantic-release/npm", "strip-json-comments"]
}
