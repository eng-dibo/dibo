{
  "name": "@eng-dibo/dibo",
  "description": "A monorepo for multiple projects",
  "version": "0.0.0-development",
  "workspaces": [
    "./projects/*",
    "./packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "prettier --write . --ignore-path=.gitignore && eslint --fix --config .eslintrc.js --ext .js,.ts --ignore-path=.gitignore",
    "test": "jest",
    "test:all": "npm t -- --coverage --only-changed=false",
    "release": "semantic-release",
    "release:local": "semantic-release --no-ci",
    "vscode": "export project=$PWD && npm run docker:stop --prefix=projects/vscode && npm run docker:run --prefix=projects/vscode",
    "task": "ts-node  -r tsconfig-paths/register ./tasks/index.ts",
    "tasks:build": "webpack --entry=./tasks/index.ts  --output-path=./tasks/tasks~~.js",
    "postinstall": "ngcc",
    "build:packages": "npm run build -w packages",
    "publish:packages": "npm run _publish -w packages",
    "generate": "npm run task -- generate",
    "link": "npm run task -- link",
    "delete-tags": "git fetch && npm run delete-tags:local && npm run delete-tags:remote",
    "delete-tags:local": "git tag | xargs git tag -d",
    "delete-tags:remote": "git tag |  xargs git push --delete origin"
  },
  "lint-staged": {
    "*": "npm run lint"
  },
  "private": false,
  "dependencies": {
    "jest": "^27.5.1",
    "rxjs": "^7.4.0",
    "strip-json-comments": "^3.1.1",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.1",
    "@types/ejs": "^3.1.0",
    "@types/node": "^17.0.8",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "codelyzer": "^6.0.2",
    "ejs": "^3.1.6",
    "eslint": "^8.6.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^37.6.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "npm-check-updates": "^12.1.0",
    "prettier": "^2.5.1",
    "semantic-release": "^19.0.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0"
  },
  "keywords": [
    "nodejs",
    "front-end",
    "back-end",
    "database",
    "angular",
    "react",
    "vue"
  ],
  "repository": {
    "type": "git",
